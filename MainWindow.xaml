<Window
    x:Class="windows_launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:windows_launcher"
    Title="windows-launcher">
    <Grid x:Name="RootGrid" Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="24,24,12,24">
            <TextBox x:Name="SearchBox" PlaceholderText="Search..." Margin="0,0,0,16" Height="40"/>
            <ListView x:Name="CategoryList" Height="Auto" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12" Padding="8">
                            <Image Source="{Binding icon}" Width="32" Height="32" Stretch="UniformToFill"/>
                            <TextBlock Text="{Binding name}" VerticalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="12,24,24,24">
            <ListView x:Name="AppList" Height="Auto" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12" Padding="8">
                            <Image Source="{Binding icon}" Width="32" Height="32" Stretch="UniformToFill"/>
                            <StackPanel>
                                <TextBlock Text="{Binding name}" FontSize="18" Foreground="White"/>
                                <TextBlock Text="{Binding description}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
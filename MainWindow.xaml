<Window
    x:Class="windows_launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:windows_launcher"
    Title="Launcher">

    <Grid x:Name="RootGrid" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Custom draggable titlebar area -->
        <Border Grid.ColumnSpan="2" Height="32" Background="Transparent" x:Name="CustomDragRegion" />

        <!-- Left sidebar -->
        <StackPanel Grid.Column="0" Padding="16,48,16,16" Spacing="12">
            <TextBox
                x:Name="SearchBox"
                PlaceholderText="Find a setting"
                Height="36"
                FontSize="14"
                Margin="0,0,0,12"
                Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                CornerRadius="6"/>

            <ListView
                x:Name="CategoryList"
                SelectionMode="Single"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource ListViewItemRevealStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Category">
                        <StackPanel Orientation="Horizontal" Spacing="12" Padding="8">
                            <Image Source="{x:Bind icon}" Width="24" Height="24" Stretch="Uniform"/>
                            <TextBlock Text="{x:Bind name}" VerticalAlignment="Center" FontSize="16" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- Main content: apps list -->
        <ScrollViewer Grid.Column="1" Padding="24" Margin="0,32,0,0" Background="Transparent">
            <ListView
                x:Name="AppList"
                SelectionMode="Single"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{StaticResource ListViewItemRevealStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:AppItem">
                        <StackPanel Orientation="Horizontal" Spacing="12" Padding="6" MinHeight="48">
                            <Border Width="40" Height="40" Background="{ThemeResource SystemControlBackgroundAltMediumBrush}" CornerRadius="6" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Image Source="{x:Bind icon}" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" Height="32"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind name}" FontSize="16" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                                <TextBlock Text="{x:Bind description}" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" TextWrapping="WrapWholeWords" MaxWidth="400"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>
